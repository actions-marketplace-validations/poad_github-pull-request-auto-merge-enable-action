{
  "name": "github-pull-request-auto-merge-enable-action",
  "version": "1.0.2",
  "repository": "https://github.com/poad/github-pull-request-auto-merge-enable-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_ENV=test node --experimental-vm-modules --unhandled-rejections=strict node_modules/.bin/jest --coverage --passWithNoTests --detectOpenHandles",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "dev": "node --loader ts-node/esm src/main.ts",
    "all": "yarn build && yarn package && yarn format && yarn lint --fix && yarn test"
  },
  "devDependencies": {
    "@swc/cli": "*",
    "@swc/helpers": "*",
    "@swc/jest": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vercel/ncc": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "*",
    "eslint-plugin-import": "*",
    "jest": "*",
    "jest-circus": "*",
    "prettier": "*",
    "ts-jest": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "@octokit/graphql": "*",
    "@octokit/plugin-request-log": "*",
    "regenerator-runtime": "*"
  },
  "peerDependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "@octokit/graphql": "*",
    "@octokit/plugin-request-log": "*"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/tests/*.test.ts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "ts-jest/legacy",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": false,
              "decorators": true,
              "dynamicImport": true
            },
            "minify": {
              "compress": {
                "unused": false
              },
              "mangle": false
            },
            "target": "es2021",
            "transform": {
              "optimizer": {
                "jsonify": {
                  "minCost": 0
                }
              }
            }
          },
          "minify": false,
          "sourceMaps": true,
          "inlineSourcesContent": true,
          "module": {
            "type": "commonjs",
            "strict": true,
            "strictMode": true,
            "lazy": true,
            "noInterop": false
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "verbose": true
  }
}
